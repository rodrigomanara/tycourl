{% extends 'template.html.twig' %}


{% block content %}
    <!-- Login Page -->
    <div id="loginPage"
         class=" min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center p-4">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-2">Welcome back</h2>
                    <p class="text-gray-600">Log in to your ShortLink account</p>
                </div>

                <form id="loginForm" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">UserName</label>
                        <input type="text" required
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                               name="username"
                        >
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password" required
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500
                               focus:border-transparent outline-none"
                               name="password"
                        >
                    </div>
                    <button type="button" id="loginBtn"
                            class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                        Log in
                    </button>
                </form>
                <p class="text-center text-sm text-gray-600 mt-6">
                    Don't have an account? <a href="/sign-up" class="text-blue-600 hover:underline font-medium">Sign
                        up</a>
                </p>
                <p class="text-center text-sm text-gray-600 mt-6">
                    Don't remember your password ? <a href="/forgot-password" class="text-blue-600 hover:underline font-medium">Reset
                        Password</a>
                </p>
            </div>
            <div id="printMessage"></div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        let utils = new Utils();
        utils.isLoggedIn();

        (function () {
            const submitter = document.getElementById('loginBtn');
            submitter.addEventListener("click", function (e) {
                e.preventDefault();

                let form = document.getElementById("loginForm");
                const formData = new FormData(form);

                const output = {};
                for (const [key, value] of formData) {
                    output[key] = value;
                }
                submitData(output);
            });

            /**
             *
             * @param data
             */
            function submitData(data) {
                fetch('/rest/api/authenticate/login', {
                    method: 'POST',
                    headers: {
                        'content-type': 'application/json',
                    },
                    body: JSON.stringify(data)
                }).then(response => response.json())
                    .then(data => {
                        printMessage(data.response);
                    })
            }

            /**
             *
             * @param data
             */
            function printMessage(data) {
                let m = document.getElementById('printMessage');
                if (data.success) {
                    m.innerHTML = 'Successfully logged in!';
                    login(data);
                } else {
                    m.innerHTML = data.errorMessage.error;
                }
            }

            /**
             * Login Session
             * @param request
             */
            function login(request) {
                window.localStorage.setItem('user_id', request.data.user_id);
                window.localStorage.setItem('token', request.data.token);
                window.location.assign('/dashboard');
            }
        })();
    </script>
{% endblock %}

