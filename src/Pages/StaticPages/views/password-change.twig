{% extends 'template.html.twig' %}


{% block content %}
    <!-- Login Page -->
    <div id="loginPage"
         class=" min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center p-4">
        <div class="max-w-md w-full">
            <div class="bg-white rounded-xl shadow-lg p-8">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-2">Password Change</h2>
                    <p class="text-gray-600"></p>
                </div>

                {% if error %}
                    <p class="text-center text-sm text-gray-600 mt-6">{{ error }}</p>
                    <p class="text-center text-sm text-gray-600 mt-6">
                    Make a request! <a href="/forgot-password" class="text-blue-600 hover:underline font-medium">click here</a>
                {% else %}
                    <form id="ChangePassword" class="space-y-5">
                        <input type="hidden" name="user_id" value="{{ user_id }}">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                            <input type="password" required
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                                   name="new-password"
                                   id="new-password"
                            >
                        </div>
                        <button type="button" id="changePasswordBtn"
                                class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold hover:bg-blue-700 transition">
                            Send
                        </button>
                    </form>
                    <p class="text-center text-sm text-gray-600 mt-6">
                        Don't have an account? <a href="/sign-up" class="text-blue-600 hover:underline font-medium">Sign
                            up</a>
                    </p>
                {% endif %}
            </div>
            <div id="printMessage"></div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="./javascript/utils.js"></script>
    <script>
        let utils = new Utils();
        utils.isLoggedIn();

        (function () {
            const submitter = document.getElementById('changePasswordBtn');
            submitter.addEventListener("click", function (e) {
                e.preventDefault();

                let form = document.getElementById("ChangePassword");
                const formData = new FormData(form);

                const output = {};
                for (const [key, value] of formData) {
                    output[key] = value;
                }
                submitData(output);
            });

            /**
             *
             * @param data
             */
            function submitData(data) {
                fetch('/rest/api/authenticate/password/change', {
                    method: 'POST',
                    headers: {
                        'content-type': 'application/json',
                    },
                    body: JSON.stringify(data)
                }).then(response => response.json())
                    .then(data => {
                        printMessage(data.response);
                    })
            }

            /**
             *
             * @param data
             */
            function printMessage(data) {

                let m = document.getElementById('printMessage');
                if (data.success) {
                    m.innerHTML = data.data.message;
                    location.assign('/login');
                } else {
                    m.innerHTML = data.errorMessage.error;
                }
            }
        })();
    </script>
{% endblock %}

