<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>URL Shortening Factory</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }

        .factory {
            width: 800px;
            height: 400px;
            position: relative;
            background: #fff;
            border: 2px solid #333;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 20px;
        }

        .conveyor {
            position: absolute;
            width: 100%;
            height: 100px;
            background: repeating-linear-gradient(
                    45deg,
                    #ddd,
                    #ddd 10px,
                    #ccc 10px,
                    #ccc 20px
            );
            top: 150px;
        }

        .url-box {
            position: absolute;
            padding: 10px 20px;
            background: #4CAF50;
            color: white;
            border-radius: 5px;
            transition: all 1s ease-in-out;
            font-size: 16px;
        }

        .station {
            position: absolute;
            width: 100px;
            height: 80px;
            background: #2196F3;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
            top: 50px;
        }

        #analyze { left: 100px; }
        #compress { left: 350px; }
        #finalize { left: 600px; }

        .arrow {
            position: absolute;
            font-size: 24px;
            top: 130px;
        }

        #start-btn {
            padding: 10px 20px;
            font-size: 16px;
            background: #FF5722;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

        #start-btn:hover {
            background: #E64A19;
        }
    </style>
</head>
<body>
<h1>URL Shortening Factory</h1>
<div class="factory">
    <div class="conveyor"></div>
    <div class="station" id="analyze">Analyze</div>
    <div class="station" id="compress">Compress</div>
    <div class="station" id="finalize">Finalize</div>
    <div class="arrow" style="left: 250px;">➡️</div>
    <div class="arrow" style="left: 500px;">➡️</div>
    <div class="url-box" id="url">https://www.example.com/very/long/url/with/lots/of/parameters</div>
</div>
<button id="start-btn">Start Process</button>

<script>
    const urlBox = document.getElementById('url');
    const startBtn = document.getElementById('start-btn');

    function animateProcess() {
        // Reset position
        urlBox.style.left = '20px';
        urlBox.style.top = '170px';

        // Station 1: Analyze
        setTimeout(() => {
            urlBox.style.left = '100px';
            urlBox.style.background = '#2196F3';
        }, 1000);

        // Station 2: Compress
        setTimeout(() => {
            urlBox.style.left = '350px';
            urlBox.style.background = '#FF9800';
            urlBox.innerHTML = 'https://www.example.com/short';
        }, 3000);

        // Station 3: Finalize
        setTimeout(() => {
            urlBox.style.left = '600px';
            urlBox.style.background = '#4CAF50';
            urlBox.innerHTML = 'https://ex.mp/abc123';
        }, 5000);

        // Complete
        setTimeout(() => {
            urlBox.style.top = '300px';
        }, 7000);
    }

    startBtn.addEventListener('click', () => {
        startBtn.disabled = true;
        urlBox.innerHTML = 'https://www.example.com/very/long/url/with/lots/of/parameters';
        urlBox.style.background = '#4CAF50';
        animateProcess();
        setTimeout(() => {
            startBtn.disabled = false;
        }, 8000);
    });
</script>
</body>
</html>