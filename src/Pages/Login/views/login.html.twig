{% extends "template.html.twig" %}

{%  block body %}
    <div class="w-full ">
        <h2 class="text-xl font-bold text-center text-gray-700">Login</h2>
        <form action="#" method="POST" class="mt-4">
            <div>
                <label class="block text-sm font-medium text-gray-600">Email</label>
                <input type="email" name="email" required class="w-full px-3 py-2 mt-1 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200">
            </div>
            <div class="mt-4">
                <label class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" name="password" required class="w-full px-3 py-2 mt-1 border rounded-lg focus:outline-none focus:ring focus:ring-blue-200">
            </div>
            <button type="submit" class="w-full px-3 py-2 mt-6 text-white bg-blue-500 rounded-lg hover:bg-blue-600">Login</button>
        </form>
        <p class="mt-4 text-sm text-center text-gray-500">Don't have an account? <a href="register" class="text-blue-500 hover:underline">Sign up</a></p>
    </div>
{%  endblock %}

